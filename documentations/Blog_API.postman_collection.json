					"path": [
						"api",
						"v1",
						"blogs"
					],
					"query": [
						{
							"key": "sortBy",
							"value": "title"
						},
						{
							"key": "sortOrder",
							"value": "asc"
						},
						{
							"key": "perPage",
							"value": "20"
						}
					]
				},
				"description": "Fetch blogs sorted by title in ascending order."
			},
			"response": []
		},
		{
			"name": "Get Latest Blogs (Default 3)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Returns correct number of blogs\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.length).to.be.at.most(3);",
							"});",
							"",
							"pm.test(\"Blogs are ordered by newest first\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.data.length > 1) {",
							"        var firstDate = new Date(jsonData.data[0].created_at);",
							"        var secondDate = new Date(jsonData.data[1].created_at);",
							"        pm.expect(firstDate.getTime()).to.be.at.least(secondDate.getTime());",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/blogs/latest",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"blogs",
						"latest"
					]
				},
				"description": "Fetch the 3 most recent blog posts.\n\n**Rate Limit:** 100 requests per minute"
			},
			"response": []
		},
		{
			"name": "Get Latest Blogs (Custom Limit)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Returns requested number of blogs\", function () {",
							"    var jsonData = pm.response.json();",
							"    var limit = parseInt(pm.request.url.query.get('limit'));",
							"    pm.expect(jsonData.data.length).to.be.at.most(limit);",
							"    pm.expect(jsonData.meta.limit).to.equal(limit);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/blogs/latest?limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"blogs",
						"latest"
					],
					"query": [
						{
							"key": "limit",
							"value": "10",
							"description": "Number of blogs to fetch (1-50)"
						}
					]
				},
				"description": "Fetch a custom number of latest blog posts (max 50)."
			},
			"response": []
		},
		{
			"name": "Test Validation - Invalid PerPage",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 422\", function () {",
							"    pm.response.to.have.status(422);",
							"});",
							"",
							"pm.test(\"Response indicates validation error\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.be.false;",
							"    pm.expect(jsonData.message).to.equal('Validation failed');",
							"    pm.expect(jsonData.errors).to.have.property('perPage');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/blogs?perPage=200",
					"host": [
