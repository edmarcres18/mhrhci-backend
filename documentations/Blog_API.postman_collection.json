{
	"info": {
		"_postman_id": "blog-api-collection-2025",
		"name": "Blog API",
		"description": "Production-ready Blog API with pagination, search, caching, and rate limiting",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Blogs",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has success field\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.true;",
							"});",
							"",
							"pm.test(\"Response has data array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('data');",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Response has meta object\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('meta');",
							"    pm.expect(jsonData.meta).to.have.property('current_page');",
							"    pm.expect(jsonData.meta).to.have.property('total');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/blogs?perPage=10&page=1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"blogs"
					],
					"query": [
						{
							"key": "perPage",
							"value": "10",
							"description": "Items per page (1-100)"
						},
						{
							"key": "page",
							"value": "1",
							"description": "Page number"
						},
						{
							"key": "search",
							"value": "",
							"description": "Search in title and content",
							"disabled": true
						},
						{
							"key": "sortBy",
							"value": "created_at",
							"description": "Sort field: created_at, updated_at, title",
							"disabled": true
						},
						{
							"key": "sortOrder",
							"value": "desc",
							"description": "Sort order: asc, desc",
							"disabled": true
						}
					]
				},
				"description": "Fetch all blogs with pagination, search, and sorting options.\n\n**Parameters:**\n- `perPage` (optional): Items per page (1-100, default: 10)\n- `page` (optional): Page number (default: 1)\n- `search` (optional): Search term for title and content\n- `sortBy` (optional): Sort field (created_at, updated_at, title)\n- `sortOrder` (optional): Sort order (asc, desc)\n\n**Rate Limit:** 60 requests per minute"
			},
			"response": []
		},
		{
			"name": "Get All Blogs with Search",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Search results contain search term\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.data.length > 0) {",
							"        var searchTerm = pm.request.url.query.get('search');",
							"        var firstItem = jsonData.data[0];",
							"        var containsSearch = firstItem.title.toLowerCase().includes(searchTerm.toLowerCase()) || ",
							"                            firstItem.content.toLowerCase().includes(searchTerm.toLowerCase());",
							"        pm.expect(containsSearch).to.be.true;",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/blogs?search=technology&perPage=25",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"blogs"
					],
					"query": [
						{
							"key": "search",
							"value": "technology"
						},
						{
							"key": "perPage",
							"value": "25"
						}
					]
				},
				"description": "Search blogs by keyword in title or content."
			},
			"response": []
		},
